<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" prefWidth="400" style="-fx-padding: 20; -fx-background-color: #f4f7f6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.my.pharmacy.controller.MinimalAddProductController">
    <Label text="QUICK ADD PRODUCT" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;"><font><Font size="16.0"/></font></Label>
    <GridPane hgap="10" vgap="10">
        <columnConstraints><ColumnConstraints prefWidth="120"/><ColumnConstraints hgrow="ALWAYS"/></columnConstraints>
        <Label text="Medicine Name:" GridPane.rowIndex="0"/><TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="Generic Name:" GridPane.rowIndex="1"/><TextField fx:id="genericField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Manufacturer:" GridPane.rowIndex="2"/><TextField fx:id="manufacturerField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Pack Size:" GridPane.rowIndex="3"/><TextField fx:id="packSizeField" promptText="Units per box" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #bdc3c7;"/>
        <Button text="Save Product" onAction="#handleSave" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>
</VBox>