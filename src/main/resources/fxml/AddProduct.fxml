<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" prefWidth="500" style="-fx-padding: 20; -fx-background-color: #f4f7f6;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.my.pharmacy.controller.AddProductController">

    <Label text="ADD NEW STOCK (WHOLESALE)" style="-fx-text-fill: #2c3e50;">
        <font><Font name="System Bold" size="18.0"/></font>
    </Label>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints prefWidth="150"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Medicine Name:" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Generic Name:" GridPane.rowIndex="1"/>
        <TextField fx:id="genericField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Manufacturer:" GridPane.rowIndex="2"/>
        <TextField fx:id="manufacturerField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Pack Size (e.g. 100):" GridPane.rowIndex="3"/>
        <TextField fx:id="packSizeField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Separator GridPane.columnSpan="2" GridPane.rowIndex="4"/>

        <Label text="Batch Number:" GridPane.rowIndex="5"/>
        <TextField fx:id="batchField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        <Label text="Expiry Date (YYYY-MM-DD):" GridPane.rowIndex="6"/>
        <TextField fx:id="expiryField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

        <Label text="Quantity (Boxes):" GridPane.rowIndex="7"/>
        <TextField fx:id="qtyBoxesField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

        <Label text="Purchase Price (Box):" GridPane.rowIndex="8"/>
        <TextField fx:id="costField" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

        <Label text="Trade Price (Wholesale):" GridPane.rowIndex="9"/>
        <TextField fx:id="tradePriceField" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #bdc3c7;"/>
        <Button text="Save Wholesale Stock" onAction="#handleSave"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>
</VBox>