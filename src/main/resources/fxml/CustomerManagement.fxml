<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<HBox spacing="20" style="-fx-padding: 20; -fx-background-color: #f4f7f6;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.my.pharmacy.controller.CustomerController">

    <VBox spacing="15" prefWidth="350" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
        <Label text="Manage Customers" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

        <ComboBox fx:id="typeComboBox" promptText="Select Customer Type" maxWidth="Infinity"/>
        <TextField fx:id="nameField" promptText="Customer Name"/>
        <TextField fx:id="phoneField" promptText="Phone Number"/>
        <TextField fx:id="cnicField" promptText="CNIC / DL Number"/>
        <TextArea fx:id="addressField" promptText="Address" prefHeight="80"/>

        <HBox spacing="10">
            <Button text="Clear" onAction="#clearFields" style="-fx-background-color: #bdc3c7;" prefWidth="100"/>
            <Button text="Save Customer" onAction="#handleSave" style="-fx-background-color: #2980b9; -fx-text-fill: white;" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        </HBox>
    </VBox>

    <VBox spacing="10" HBox.hgrow="ALWAYS">
        <TextField fx:id="searchField" promptText="Search by Name, Phone, or Type..."/>
        <TableView fx:id="customerTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
                <TableColumn fx:id="colType" text="Type" prefWidth="100"/>
                <TableColumn fx:id="colPhone" text="Phone" prefWidth="120"/>
                <TableColumn fx:id="colAddress" text="Address" prefWidth="200"/>
            </columns>
        </TableView>
    </VBox>
</HBox>