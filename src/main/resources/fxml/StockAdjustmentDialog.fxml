<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" prefWidth="400" style="-fx-padding: 20; -fx-background-color: #f4f7f6;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.my.pharmacy.controller.StockAdjustmentController">

    <Label text="CHANGE STOCK / ADJUSTMENT" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
        <font><Font size="16.0"/></font>
    </Label>

    <Separator/>

    <GridPane hgap="10" vgap="15">
        <columnConstraints>
            <ColumnConstraints prefWidth="120"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Medicine:" GridPane.rowIndex="0"/>
        <Label fx:id="lblMedicineName" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Batch No:" GridPane.rowIndex="1"/>
        <Label fx:id="lblBatchNo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Current Boxes:" GridPane.rowIndex="2"/>
        <Label fx:id="lblCurrentBoxes" text="0" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="New Box Count:" GridPane.rowIndex="3"/>
        <TextField fx:id="newBoxesField" promptText="Enter corrected total boxes" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #bdc3c7;"/>
        <Button text="Update Stock" onAction="#handleUpdate" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>
</VBox>