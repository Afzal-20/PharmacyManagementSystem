<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #f4f7f6;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.my.pharmacy.controller.ItemLedgerController">

    <Label text="ITEM LEDGER" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;">
        <font><Font size="22.0"/></font>
    </Label>

    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #bdc3c7;">
        <Label text="Select Medicine:" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="productComboBox" prefWidth="300" promptText="Search Medicine..."/>
        <Button text="Load Ledger" onAction="#loadLedgerData" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
    </HBox>

    <TabPane VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab text="1 - Sales History">
                <VBox>
                    <TableView fx:id="salesTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colSaleDate" text="Date" prefWidth="150"/>
                            <TableColumn fx:id="colInvoiceNo" text="Invoice No" prefWidth="100"/>
                            <TableColumn fx:id="colSaleQty" text="Qty Sold" prefWidth="100"/>
                            <TableColumn fx:id="colSaleRate" text="Rate" prefWidth="100"/>
                            <TableColumn fx:id="colSaleTotal" text="Total Amount" prefWidth="120"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            <Tab text="2 - Purchase History">
                <VBox>
                    <TableView fx:id="purchaseTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colBatchNo" text="Batch No" prefWidth="150"/>
                            <TableColumn fx:id="colExpiry" text="Expiry Date" prefWidth="120"/>
                            <TableColumn fx:id="colPurchasedQty" text="Current Stock" prefWidth="100"/>
                            <TableColumn fx:id="colCost" text="Cost Price" prefWidth="100"/>
                            <TableColumn fx:id="colTrade" text="Trade Price" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </tabs>
    </TabPane>
</VBox>