<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="30.0" prefHeight="400.0" prefWidth="600.0"
      style="-fx-background-color: #f4f7f6;" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.my.pharmacy.controller.SetupController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <VBox alignment="CENTER" spacing="10.0">
        <Label text="Welcome to Pharmacy Management System" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>
        <Label text="Please select your business type to configure the system." textFill="#7f8c8d" />
    </VBox>

    <HBox alignment="CENTER" spacing="30.0">
        <Button onAction="#handleRetailSelection" prefHeight="150.0" prefWidth="200.0"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand;" text="RETAIL MODE">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
        <Button onAction="#handleWholesaleSelection" prefHeight="150.0" prefWidth="200.0"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand;" text="WHOLESALE MODE">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
    </HBox>

    <Label text="Note: This selection will create your specific database and cannot be changed later."
           style="-fx-font-style: italic;" textFill="#e74c3c" />
</VBox>