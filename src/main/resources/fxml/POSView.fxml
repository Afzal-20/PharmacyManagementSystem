<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" style="-fx-padding: 30; -fx-background-color: #ecf0f1;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.my.pharmacy.controller.POSController">

    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Label text="Point of Sale" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="28.0"/>
            </font>
        </Label>

        <Region HBox.hgrow="ALWAYS" />

        <TextField fx:id="searchField" promptText="Type Name..." prefWidth="300.0" prefHeight="40.0"
                   style="-fx-background-radius: 20; -fx-padding: 0 15 0 15; -fx-border-color: #bdc3c7; -fx-border-radius: 20;"/>

        <Button text="Add to Cart" onAction="#addToCart"
                style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand;"
                prefHeight="40.0" prefWidth="120.0"/>
    </HBox>

    <TableView fx:id="cartTable" VBox.vgrow="ALWAYS" style="-fx-font-size: 14px;">
        <columns>
            <TableColumn fx:id="colId" text="#" prefWidth="50.0"/>
            <TableColumn fx:id="colName" text="Medicine Name" prefWidth="250.0"/>
            <TableColumn fx:id="colBatch" text="Batch" prefWidth="100.0"/>
            <TableColumn fx:id="colPrice" text="Price ($)" prefWidth="100.0"/>
            <TableColumn fx:id="colQty" text="Qty" prefWidth="80.0"/>
            <TableColumn fx:id="colTotal" text="Subtotal ($)" prefWidth="120.0"/>
        </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="20.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">

        <VBox alignment="CENTER_RIGHT">
            <Label text="Total Amount" textFill="#7f8c8d" style="-fx-font-size: 14px;"/>
            <Label fx:id="lblGrandTotal" text="\$0.00" textFill="#2c3e50">
                <font>
                    <Font name="System Bold" size="36.0"/>
                </font>
            </Label>
        </VBox>

        <Button text="Checkout (F5)" onAction="#handleCheckout"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 15 40; -fx-background-radius: 5; -fx-cursor: hand;"/>
    </HBox>

</VBox>