<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #f4f7f6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.my.pharmacy.controller.SalesHistoryController">
    <Label text="SALES HISTORY &amp; RETURNS HUB" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;"><font><Font size="22.0"/></font></Label>

    <HBox spacing="15" alignment="CENTER_LEFT">
        <Label text="Filter by Date:" style="-fx-font-weight: bold;"/>
        <DatePicker fx:id="datePicker" />
        <Button text="Load Invoices" onAction="#loadInvoices" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
    </HBox>

    <SplitPane orientation="VERTICAL" VBox.vgrow="ALWAYS" dividerPositions="0.45">
        <VBox spacing="5">
            <Label text="Invoices" style="-fx-font-weight: bold; -fx-padding: 5;"/>
            <TableView fx:id="invoiceTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colInvId" text="Invoice #" prefWidth="80"/>
                    <TableColumn fx:id="colInvDate" text="Time" prefWidth="150"/>
                    <TableColumn fx:id="colInvTotal" text="Grand Total" prefWidth="120"/>
                    <TableColumn fx:id="colInvMode" text="Type" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>

        <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="Invoice Items" style="-fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Process Return for Selected Item" onAction="#handleProcessReturn" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
            <TableView fx:id="itemTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colItemName" text="Medicine" prefWidth="200"/>
                    <TableColumn fx:id="colItemQty" text="Qty Sold" prefWidth="80"/>
                    <TableColumn fx:id="colItemPrice" text="Unit Rate" prefWidth="100"/>
                    <TableColumn fx:id="colItemDisc" text="Disc %" prefWidth="80"/>
                    <TableColumn fx:id="colItemRet" text="Returned Qty" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </SplitPane>
</VBox>