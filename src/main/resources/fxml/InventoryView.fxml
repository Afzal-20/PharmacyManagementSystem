<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white;"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.my.pharmacy.controller.InventoryController">

    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="INVENTORY MANAGEMENT" style="-fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <Button text="+ ADD NEW PRODUCT" onAction="#handleAddNewProduct"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10;"/>
    </HBox>

    <TableView fx:id="inventoryTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colName" text="Medicine Name" prefWidth="200"/>
            <TableColumn fx:id="colGeneric" text="Generic Name" prefWidth="150"/>
            <TableColumn fx:id="colManufacturer" text="Manufacturer" prefWidth="150"/>
            <TableColumn fx:id="colPackSize" text="Pack Size" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

</VBox>