<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #f4f7f6;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.my.pharmacy.controller.InventoryController">

    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="DETAILED BATCH INVENTORY" style="-fx-text-fill: #2c3e50;">
            <font><Font name="System Bold" size="22.0"/></font>
        </Label>
        <Pane HBox.hgrow="ALWAYS" />
        <Button text="âœŽ Adjust Stock" onAction="#handleAdjustStock"
                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
        <Button text="+ Add New Product" onAction="#handleAddNewProduct"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
    </HBox>

    <TableView fx:id="inventoryTable" VBox.vgrow="ALWAYS" style="-fx-background-radius: 5;">
        <columns>
            <TableColumn fx:id="colName" text="Medicine Name" prefWidth="200"/>
            <TableColumn fx:id="colBatch" text="Batch #" prefWidth="100"/>
            <TableColumn fx:id="colExpiry" text="Expiry" prefWidth="100"/>
            <TableColumn fx:id="colPackSize" text="Pack Size" prefWidth="90"/>
            <TableColumn fx:id="colStock" text="Stock (Units)" prefWidth="100"/>
            <TableColumn fx:id="colTradePrice" text="Trade Price" prefWidth="110"/>

        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label text="Note: Select a specific batch above to adjust stock."
               style="-fx-text-fill: #7f8c8d; -fx-font-style: italic;"/>
    </HBox>
</VBox>